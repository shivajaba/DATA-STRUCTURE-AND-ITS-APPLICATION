6a)) chech even or odd

echo "Enter a number: " 
read num
if [ $((num % 2)) -eq 0 ]; then 
echo "$num is even." 
else 
echo "$num is odd." 
fi

6b))
echo "Enter the file name: " 
read filename 
if [ -e "$filename" ]; then 
echo "File '$filename' exists." 
if [ -r "$filename" ]; then 
echo "File is readable." 
else 
echo "File is NOT readable." 
fi
# Check write permission 
if [ -w "$filename" ]; then 
echo "File is writable." 
else 
echo "File is NOT writable." 
fi 
if [ -x "$filename" ]; then 
echo "File is executable." 
else 
echo "File is NOT executable." 
fi 
else 
echo "File '$filename' does not exist." 
fi 

out put
file name
$ chmod 700 11.txt
#txt is exit
$ file name
$ chmod 007 11.txt
#not read able

7a)) Shell script to print the multiplication table of a given number. 

read -p "Enter a number: " num
echo "Multiplication table of $num"
for i in {1..10}
do
    echo "$num x $i = $((num * i))"
done

7b))
echo "Enter the number"
read num
fact=1
for i in (seq 1 $ num)
do 
fact=$((fact * i)) 
done 
echo "Factorial of $num is: $fact" 

8a))Shell script to perform basic arithmetic operations using case. 

echo -n "Enter first number: " 
read num1 
echo -n "Enter second number: " 
read num2 
echo "Choose an operation:" 
echo "1. Addition (+)" 
echo "2. Subtraction (-)" 
echo "3. Multiplication (*)" 
echo "4. Division (/)" 
echo -n "Enter your choice (1-4): " 
read choice 
 
case $choice in 
  1) 
    result=$((num1 + num2)) 
    echo "Result: $num1 + $num2 = $result" 
    ;; 
  2) 
    result=$((num1 - num2)) 
    echo "Result: $num1 - $num2 = $result" 
    ;; 
  3) 
    result=$((num1 * num2)) 
    echo "Result: $num1 * $num2 = $result" 
    ;; 
  4) 
    if [ "$num2" -eq 0 ]; then 
      echo "Error: Division by zero is not allowed." 
    else 
      result=$((num1 / num2)) 
      echo "Result: $num1 / $num2 = $result" 
    fi 
    ;; 
  *) 
    echo "Invalid choice. Please select 1, 2, 3, or 4." 
    ;; 
esac

8b))
echo "operation menu"
echo "1. List files" 
  echo "2. View current directory" 
  echo "3. Exit" 
  echo -n "Enter your choice [1-3]: " 
  read choice 
 
  case $choice in 
    1) 
      echo "Files in current directory:" 
      ls -l 
      ;; 
    2) 
      echo "Current directory:" 
      pwd 
      ;; 
    3) 
      echo "Exiting... Goodbye!" 
      exit 0 
      ;; 
    *) 
      echo "Invalid choice. Please enter 1, 2, or 3." 
      ;; 
  esac 
done

9a)) Shell script to check whether a string is a palindrome. 

echo "Enter a string: " 
read str 
rev_str=$(echo "$str" | rev) 
if [ "$str" = "$rev_str" ]; then 
echo "'$str' is a palindrome." 
else 
echo "'$str' is not a palindrome." 
fi 

